<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(to right, #ff9a9e, #fad0c4);
        font-family: 'Arial', sans-serif;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s;
    }

        .card:hover {
            transform: scale(1.02);
        }

    .btn-custom {
        background: #ff758c;
        color: white;
        font-weight: bold;
        transition: background 0.3s;
    }

        .btn-custom:hover {
            background: #ff4b6d;
        }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card p-4" style="max-width: 500px; width: 100%;">
        <div class="card-header text-center bg-danger text-white">
            <h3>Submit Payment</h3>
        </div>
        <div class="card-body">
            <form id="paymentForm">
                <div class="mb-3">
                    <label for="amount" class="form-label">Amount:</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="amount" name="amount" required />
                        <span class="input-group-text">VNĐ</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="user" class="form-label">User:</label>
                    <input type="text" class="form-control" id="user" name="user" required />
                </div>
                <button type="submit" class="btn btn-custom w-100">Submit Payment</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#amount').on('input', function () {
                let value = $(this).val().replace(/,/g, '').replace(/[^0-9.]/g, '');
                if (value.includes('.')) {
                    let parts = value.split('.');
                    parts[0] = parseInt(parts[0]).toLocaleString('en-US');
                    value = parts.join('.');
                } else {
                    value = parseInt(value).toLocaleString('en-US');
                }
                $(this).val(value);
            });

            $('#paymentForm').on('submit', function (event) {
                event.preventDefault();

                var amount = $('#amount').val().replace(/,/g, '');
                var user = $('#user').val();

                $.ajax({
                    url: 'http://prn-222.food/api/Payment', // Replace with your API endpoint
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        money: amount,
                        username: user
                    }),
                    success: function (response) {
                        window.location = response;
                    },
                    error: function (xhr, status, error) {
                        alert('Error creating payment link!');
                    }
                });
            });
        });
    </script>
}
